generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  amount          Float
  fromAccount     String   @map("from_account")
  toAccount       String   @map("to_account")
  transactionDate DateTime @map("transaction_date")

  @@map("transactions")
}
